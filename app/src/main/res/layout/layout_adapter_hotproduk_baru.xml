<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="130dp"
                android:layout_height="130dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_produk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="4:4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:elevation="@dimen/size_20dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/lampu2"
                            android:scaleType="centerCrop" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/txt_nama_brg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4dp"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="nama produk"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/txt_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4dp"
                android:textStyle="bold"
                android:textSize="@dimen/size_12dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:text="Rp.120.000.00"
                android:textColor="@color/color_orange_dialog"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginBottom="@dimen/size_8dp"
                android:textStyle="bold"
                android:textSize="10sp"
                android:text="kosong"
                android:textColor="@color/grey_dark"/>

        </LinearLayout>


</androidx.cardview.widget.CardView>