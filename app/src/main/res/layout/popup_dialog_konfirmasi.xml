<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_10dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/size_10dp"
        android:layout_margin="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:layout_marginLeft="@dimen/size_4dp"
                android:text="Apakah anda yakin barang sudah sampai? Ya/Tidak"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btn_konfirmasi"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/size_4dp"
                    android:background="@drawable/border_btn_confrim_red"
                    android:layout_height="35dp"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_white"
                    android:text="Konfirmasi"
                    android:textSize="@dimen/size_12dp"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/btn_batal"
                    android:layout_weight="0.7"
                    android:layout_width="0dp"
                    android:layout_marginLeft="@dimen/size_4dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/rubik_medium"
                    android:background="@drawable/border_white_black"
                    android:text="Batal"
                    android:textSize="@dimen/size_12dp"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>