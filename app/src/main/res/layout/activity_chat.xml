<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityChat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/size_8dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/footer"
        android:weightSum="1">

       <!-- <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            app:cardCornerRadius="@dimen/size_10dp"
            android:layout_marginTop="@dimen/margin_default">-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                android:background="@drawable/border_chat_edt"
                android:gravity="top"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.12"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:background="?attr/selectableItemBackground"
                        android:id="@+id/iv_attach"
                        android:src="@drawable/attach"/>

                </RelativeLayout>

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="0.64"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/edt_chat"
                    android:paddingLeft="@dimen/margin_tiny"
                    android:paddingRight="@dimen/margin_tiny"
                    android:hint="Ketik Pesan"
                    android:paddingTop="@dimen/margin_default"
                    android:paddingBottom="@dimen/margin_default"
                    android:layout_marginTop="@dimen/margin_tiny"
                    android:layout_marginBottom="@dimen/margin_tiny"
                    android:scrollHorizontally="false"
                    android:background="@android:color/transparent"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.12"
                    android:layout_height="match_parent">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.12"
                    android:layout_gravity="center"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/iv_photo"
                        android:background="?attr/selectableItemBackground"
                        android:src="@drawable/ic_photos"/>

                </RelativeLayout>

            </LinearLayout>
        <!--</androidx.cardview.widget.CardView>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal|bottom"
            android:paddingTop="@dimen/margin_default"
            android:paddingBottom="@dimen/margin_default">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="?attr/selectableItemBackground"
                android:id="@+id/iv_send"
                android:paddingRight="@dimen/margin_default"
                android:paddingTop="@dimen/margin_default"
                android:paddingBottom="@dimen/margin_default"
                android:paddingLeft="@dimen/margin_default"
                android:src="@drawable/ic_send"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/paddingTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/backarrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chat"
                android:textColor="@color/color_white"
                android:layout_gravity="center"
                android:textSize="@dimen/size_16dp"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:layout_below="@id/paddingTop"
        android:divider="@null"
        android:layout_above="@id/footer">
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:id="@+id/rll_container"
        android:layout_above="@id/footer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginBottom="@dimen/size_8dp"
            android:background="@drawable/border_corner"
            android:weightSum="3"
            android:gravity="center"
            android:id="@+id/ll_photo"
            android:padding="@dimen/margin_default">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_default"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_small"
                    android:background="@drawable/doc"
                    android:id="@+id/btn_buka_dokument"
                    style="?android:attr/borderlessButtonStyle" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:textSize="@dimen/size_12dp"
                    android:text="Buka Dokumen" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_default"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_small"
                    android:background="@drawable/gallery"
                    style="?android:attr/borderlessButtonStyle"
                    android:id="@+id/btn_buka_gallery"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:textSize="@dimen/size_12dp"
                    android:textColor="@color/color_white"
                    android:gravity="center"
                    android:text="Buka Gallery"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_default"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="@dimen/margin_small"
                    android:background="@drawable/kamera"
                    android:id="@+id/btn_buka_kamera"
                    style="?android:attr/borderlessButtonStyle"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_12dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:gravity="center"
                    android:text="Buka Kamera"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>