<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    tools:context=".activity.pembayaran.FragmentBelumDibayar">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rc_belumbayar"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_proses"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/rc_belumbayar"
        android:layout_marginTop="@dimen/size_20dp"
        android:layout_marginBottom="@dimen/size_20dp"
        android:textSize="@dimen/size_12dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:background="@drawable/border_red_btn"
        android:text="Lanjutkan Pembayaran"
        android:textColor="@color/color_white"/>

    <LinearLayout
        android:id="@+id/ln_wtf"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gmbr_wtf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/gambarwtfpiutang"
            android:layout_margin="@dimen/size_10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tidak ada Piutang yang akan dibayar."
            android:gravity="center"
            android:layout_gravity="center"/>

    </LinearLayout>



</RelativeLayout>