<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="300dp"
        app:cardCornerRadius="@dimen/size_10dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/size_10dp"
        android:layout_margin="@dimen/size_10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/size_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.4"
                    android:layout_height="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_margin="@dimen/size_4dp"
                        android:src="@drawable/gambargagal"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.7"
                    android:layout_height="0dp">

                    <TextView
                        android:id="@+id/txt_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/rubik_reguler"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rv_confrim"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_konfirmasi"
                        android:layout_width="100dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_btn_confrim_red"
                        android:layout_height="35dp"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/color_white"
                        android:text="Ok"
                        android:textSize="@dimen/size_12dp"
                        android:gravity="center"/>

                    <!-- <Button
                         android:id="@+id/btn_batal"
                         android:layout_weight="0.7"
                         android:layout_width="0dp"
                         android:layout_marginLeft="@dimen/size_4dp"
                         android:layout_height="35dp"
                         android:fontFamily="@font/rubik_medium"
                         android:background="@drawable/border_white_black"
                         android:text="Tidak"
                         android:textSize="@dimen/size_12dp"
                         android:gravity="center"/>-->
                </RelativeLayout>

            </LinearLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>