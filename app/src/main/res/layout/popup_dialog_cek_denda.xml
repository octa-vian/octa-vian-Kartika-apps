<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginLeft="@dimen/size_10dp"
        app:cardCornerRadius="@dimen/size_12dp"
        android:layout_centerInParent="true"
        android:elevation="@dimen/size_10dp"
        android:layout_margin="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/padd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/orange">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/size_10dp"
                android:src="@drawable/alert"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/size_10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1.3"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:fontFamily="@font/rubik_reguler"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Maaf"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_reguler"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Anda tidak bisa melakukan transaksi pesanan"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="12sp"
                                android:fontFamily="@font/rubik_reguler"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Karena memiliki denda sebesar"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:fontFamily="@font/rubik_medium"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/red_Dark"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:textSize="12sp"
                            android:fontFamily="@font/rubik_reguler"
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Apakah anda ingin membayarnya?"/>


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_weight="0.6">

                <LinearLayout
                    android:id="@+id/rv_confrim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_cekDenda"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_marginRight="@dimen/size_4dp"
                        android:layout_marginLeft="@dimen/size_4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_btn_confrim_red"
                        android:layout_height="35dp"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/color_white"
                        android:text="Lihat Denda"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <Button
                        android:id="@+id/btn_bayarDenda"
                        android:layout_width="0dp"
                        android:layout_weight="0.8"
                        android:layout_marginRight="@dimen/size_4dp"
                        android:layout_marginLeft="@dimen/size_4dp"
                        android:layout_gravity="center"
                        android:background="@drawable/border_chat_edt"
                        android:layout_height="35dp"
                        android:fontFamily="@font/rubik_medium"
                        android:textColor="@color/black"
                        android:text="Bayar Denda"
                        android:textSize="10sp"
                        android:gravity="center"/>

                    <!-- <Button
                         android:id="@+id/btn_batal"
                         android:layout_weight="0.7"
                         android:layout_width="0dp"
                         android:layout_marginLeft="@dimen/size_4dp"
                         android:layout_height="35dp"
                         android:fontFamily="@font/rubik_medium"
                         android:background="@drawable/border_white_black"
                         android:text="Tidak"
                         android:textSize="@dimen/size_12dp"
                         android:gravity="center"/>-->
                </LinearLayout>
                </RelativeLayout>

            </LinearLayout>





        </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>