        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/size_10dp"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <!--<ImageView
