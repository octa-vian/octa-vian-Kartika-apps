<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_10dp"
        android:elevation="@dimen/size_10dp"
        android:layout_margin="@dimen/size_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_margin="@dimen/size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/gambarkonfirmasicart"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:gravity="center"
                android:text="Apakah anda yakin ingin memasukan barang ini kekeranjang?"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_tidak"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textColor="@color/black"
                    android:background="@drawable/border_white_black_new"
                    android:textSize="@dimen/size_12dp"
                    android:layout_margin="@dimen/size_10dp"
                    android:text="Tidak"/>

                <Button
                    android:id="@+id/btn_ya"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="37dp"
                    android:textSize="@dimen/size_12dp"
                    android:textColor="@color/color_white"
                    android:layout_margin="@dimen/size_10dp"
                    android:background="@drawable/border_red_btn"
                    android:text="Ya"/>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>