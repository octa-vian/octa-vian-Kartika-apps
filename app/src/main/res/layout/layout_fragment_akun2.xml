<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6FA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentAkun">

    <RelativeLayout
        android:id="@+id/paddingTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red_Dark">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <!--<ImageView
                android:id="@+id/cart"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:src="@drawable/backarrow"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:paddingTop="@dimen/size_8dp"
                android:text="AKUN"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cs_1"
        android:layout_below="@id/paddingTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <View
        android:id="@+id/viewView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_Dark"
        app:layout_constraintBottom_toTopOf="@id/guideline3" />

    <LinearLayout
            android:id="@+id/ln1"
            app:layout_constraintTop_toTopOf="@id/guideline4"
            app:layout_constraintBottom_toBottomOf="@id/guideline4"
            android:layout_marginRight="@dimen/size_20dp"
            android:layout_marginLeft="@dimen/size_20dp"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="85dp"
            android:layout_height="85dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/layout_category"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/size_4dp"
                app:cardCornerRadius="@dimen/size_10dp"
                app:layout_constraintDimensionRatio="3:3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_cardview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/akungrey" />


                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_namaOutlet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_medium"
                android:text="Nama Outlet"
                android:textColor="@color/color_white"
                android:textSize="@dimen/size_16dp" />

            <TextView
                android:id="@+id/txt_notelp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_reguler"
                android:text="No. Telp"
                android:textColor="@color/color_white"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Username"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_reguler"
                android:text="User"
                android:textColor="@color/color_white"
                android:textSize="14sp" />


        </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintBottom_toBottomOf="@id/guideline3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline3"
            app:layout_constraintVertical_bias="0.83">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        android:elevation="@dimen/size_20dp"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/daftarpemesanan"/>

            <TextView
                android:layout_width="145dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/size_10dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Daftar pemesanan"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/btn_lihat"
                    android:layout_width="80dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@drawable/border_red_btn"
                    android:fontFamily="@font/rubik_reguler"
                    android:gravity="center"
                    android:text="Lihat"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/size_12dp" />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="170dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="65dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/cs_1"
        android:layout_marginTop="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F6FA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_20dp"
            android:background="#F5F6FA"
            android:layout_below="@id/relatif">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_piutang"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        app:cardCornerRadius="@dimen/size_10dp"
                        android:elevation="@dimen/size_20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="135dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/size_10dp"
                                android:src="@drawable/piutang"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/rubik_reguler"
                                android:gravity="center"
                                android:text="Piutang"
                                android:textSize="@dimen/size_12dp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_bayar"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        app:cardCornerRadius="@dimen/size_10dp"
                        android:elevation="@dimen/size_20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="135dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/size_10dp"
                                android:src="@drawable/pembayaranpiutang"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/rubik_reguler"
                                android:gravity="center"
                                android:text="Pembayaran"
                                android:textColor="@color/black"
                                android:textSize="@dimen/size_12dp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_denda"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        app:cardCornerRadius="@dimen/size_10dp"
                        android:elevation="@dimen/size_20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="135dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/size_10dp"
                                android:src="@drawable/denda"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/rubik_reguler"
                                android:gravity="center"
                                android:text="Denda"
                                android:textSize="@dimen/size_12dp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_return"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        app:cardCornerRadius="@dimen/size_10dp"
                        android:elevation="@dimen/size_20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_10dp"
                            android:layout_marginTop="@dimen/size_12dp"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="135dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/size_10dp"
                                android:src="@drawable/inforeture"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/rubik_reguler"
                                android:gravity="center"
                                android:text="Info Retur"
                                android:textSize="@dimen/size_12dp"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_panduan"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    app:cardCornerRadius="@dimen/size_10dp"
                    android:elevation="@dimen/size_20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_12dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/size_10dp"
                            android:src="@drawable/syaratdanketentuan"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/rubik_reguler"
                            android:gravity="center"
                            android:textSize="@dimen/size_12dp"
                            android:text="Syarat dan Ketentuan"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_weight="1">

                </LinearLayout>

                <!--<androidx.cardview.widget.CardView
                    android:id="@+id/syarat"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginLeft="@dimen/size_20dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    app:cardCornerRadius="@dimen/size_10dp"
                    android:elevation="@dimen/size_20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_12dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="135dp"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/size_10dp"
                            android:src="@drawable/denda"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/rubik_reguler"
                            android:gravity="center"
                            android:text="Denda"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>-->
            </LinearLayout>


            </LinearLayout>

        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/loading"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>


</RelativeLayout>