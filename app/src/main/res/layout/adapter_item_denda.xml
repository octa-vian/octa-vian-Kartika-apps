<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_16dp"
        android:elevation="@dimen/size_20dp"
        android:layout_margin="@dimen/size_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_noNota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_4dp"
                    android:layout_marginRight="@dimen/size_4dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_medium"
                    android:text="No Nota"
                    android:textColor="@color/red_Dark" />

                <TextView
                    android:id="@+id/txt_tanggal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/rubik_reguler"
                    android:gravity="right"
                    android:text="Tanggal"
                    android:textSize="@dimen/size_12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGreyAccent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:fontFamily="@font/rubik_reguler"
                android:text="Nominal:"
                android:textSize="@dimen/size_12dp" />

            <TextView
                android:id="@+id/txt_nominal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:textColor="@color/black"
                android:fontFamily="@font/rubik_medium"
                android:text="Rp. xxx xxx"
                android:textSize="14sp" />




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>