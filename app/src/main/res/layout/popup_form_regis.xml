<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:text="Form Register"
                android:gravity="center"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserName:"
                android:textSize="12sp"
                android:textStyle="bold"/>
                <EditText
                    android:id="@+id/txt_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:hint="Username tidak boleh mengandung spasi"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/txt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:hint="Password minimal 5 digit"
                    android:inputType="textPassword"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketik Ulang Password:"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/txt_ulang_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/size_12dp"
                    android:hint="Password minimal 5 digit"
                    android:inputType="textPassword"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pin:"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/txt_pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberPassword"
                    android:textSize="@dimen/size_12dp"
                    android:hint="Pin harus 4 digit"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketik Ulang Pin:"
                    android:textSize="12sp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/txt_repin"
                    android:inputType="numberPassword"
                    android:hint="Pin harus 4 digit"
                    android:textSize="@dimen/size_12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:textSize="@dimen/size_12dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="68dp"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:text="Register"
                android:textColor="#fff"
                android:background="@drawable/border_login"/>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>