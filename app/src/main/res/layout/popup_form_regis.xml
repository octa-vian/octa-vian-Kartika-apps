<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_form_regis_red"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="Form Register"
                android:textColor="@color/color_white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_white"
                    android:text="UserName:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="false">

                    <EditText
                        android:id="@+id/txt_username"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:paddingLeft="@dimen/size_8dp"
                        android:background="@drawable/border_white"
                        android:fontFamily="@font/rubik_medium"
                        android:hint=""
                        android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_Dark"
                    android:gravity="left"
                    android:text="*User name tidak boleh mengandung spasi"
                    android:textSize="8sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Password:"
                    android:textColor="@color/color_white"
                    android:fontFamily="@font/rubik_medium"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/txt_pass"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingLeft="@dimen/size_8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:background="@drawable/border_white"
                    android:hint=""
                    android:inputType="textPassword"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_Dark"
                    android:gravity="left"
                    android:text="*Password minimal 5 digit"
                    android:textSize="8sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketik Ulang Password:"
                    android:fontFamily="@font/rubik_medium"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/txt_ulang_pass"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@drawable/border_white"
                    android:paddingLeft="@dimen/size_8dp"
                    android:fontFamily="@font/rubik_medium"
                    android:hint=""
                    android:inputType="textPassword"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_Dark"
                    android:gravity="left"
                    android:text="*Password minimal 5 digit"
                    android:textSize="8sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_medium"
                    android:text="Pin Anda:"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/txt_pin"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingLeft="@dimen/size_8dp"
                    android:background="@drawable/border_white"
                    android:inputType="numberPassword"
                    android:hint=""
                    android:fontFamily="@font/rubik_medium"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_Dark"
                    android:fontFamily="@font/rubik_medium"
                    android:gravity="left"
                    android:text="*Pin harus 4 digit"
                    android:textSize="8sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ketik Ulang Pin:"
                    android:textColor="@color/color_white"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/txt_repin"
                    android:inputType="numberPassword"
                    android:hint=""
                    android:fontFamily="@font/rubik_medium"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:paddingLeft="@dimen/size_8dp"
                    android:background="@drawable/border_white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_Dark"
                    android:gravity="left"
                    android:text="*Pin harus 4 digit"
                    android:textSize="8sp"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="140dp"
                android:layout_height="35dp"
                android:textSize="@dimen/size_12dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="68dp"
                android:layout_marginLeft="68dp"
                android:layout_marginBottom="40dp"
                android:layout_gravity="center"
                android:fontFamily="@font/rubik_medium"
                android:text="Register"
                android:textColor="#fff"
                android:background="@drawable/border_btn_lanjut"/>

        </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>