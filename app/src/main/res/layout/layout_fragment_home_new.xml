<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".FragmentHome">

    <!--<include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/part_actionbar"/>-->



        <LinearLayout
            android:id="@+id/ln_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/red_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:textColor="#fff"
                    android:text="Kartika Reseller"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>
-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_search_btn"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/size_4dp"
                    android:drawableLeft="@drawable/ic_search_black_24dp"
                    android:background="@drawable/border_white"
                    android:textSize="@dimen/size_12dp"
                    android:hint="Cari produk disini"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size_4dp"
                    android:layout_gravity="center"
                    android:layout_weight="2.3">

                <ImageView
                    android:id="@+id/pesan"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_margin="@dimen/size_4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_message"/>

                <ImageView
                    android:id="@+id/cart"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginBottom="@dimen/size_4dp"
                    app:layout_constraintLeft_toRightOf="@id/pesan"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    android:src="@drawable/ic_shopping_cart"/>

                <ImageView
                    android:id="@+id/setting"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/cart"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_settings"/>

                    <TextView
                        android:id="@+id/txt_count"
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bage_circle"
                        android:textColor="@color/color_white"
                        app:layout_constraintTop_toTopOf="@id/cart"
                        android:textSize="@dimen/size_10dp"
                        android:text="3"
                        android:textStyle="bold"
                        android:gravity="center"
                        tools:layout_editor_absoluteX="20dp"
                        app:layout_constraintRight_toLeftOf="@id/setting"/>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ln_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:id="@+id/ll_layout1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/ll_title1"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Promo"
                    android:textSize="18sp"
                    />

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/orange"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:text="Lihat Semua"/>

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ll_recyclerView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cr_point"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_4dp"
                android:layout_marginLeft="@dimen/size_4dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:elevation="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/poin"
                    android:layout_margin="10dp"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Poin Anda"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:gravity="left"/>

                <TextView
                    android:id="@+id/txt_point"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:gravity="center"/>


            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/txt_hot_produk"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hot Produk"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/lihat_semua"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/orange"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:text="Lihat Semua"/>

                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/ll_recyclerView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
