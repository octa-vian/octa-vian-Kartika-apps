<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".merchant.ActivityCheckOutPesanan">

    <ScrollView
        android:id="@+id/scr_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/vw_1"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ln1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/size_20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:text="No. Pemesanan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="P001"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_4dp"
                    android:layout_marginBottom="@dimen/size_4dp"
                    android:text="Tanggal Pemesanan" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01/04/2020"
                    android:textColor="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_tersedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/txt_note1"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_4dp"></androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/txt_note1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/size_10dp"
                    android:text="note"
                    android:textColor="@color/red_Dark"
                    android:textSize="@dimen/size_12dp" />

                <View
                    android:id="@+id/vw_0"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_2dp"
                    android:layout_above="@id/ln_btn"
                    android:background="@color/colorGreyAccent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_preorder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/txt_note2"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:layout_marginBottom="@dimen/size_10dp"></androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/txt_note2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/size_10dp"
                    android:text="note"
                    android:textColor="@color/red_Dark"
                    android:textSize="@dimen/size_12dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/vw_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_4dp"
        android:layout_above="@id/ln_btn"
        android:background="@color/colorGreyAccent"/>

    <LinearLayout
        android:id="@+id/ln_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:layout_marginBottom="@dimen/size_10dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size_12dp"
                android:text="Total Belanja"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:text=""/>


        </LinearLayout>


        <Button
            android:id="@+id/btn_beli"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginBottom="@dimen/size_16dp"
            android:background="@drawable/border_btn_lanjut"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textSize="@dimen/size_12dp"
            android:textColor="#fff"
            android:gravity="center"
            android:text="Lanjutkan"/>

    </LinearLayout>




</RelativeLayout>